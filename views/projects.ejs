<%- include("./partials/header") %>

<div class="container">
    <div>
        <h1 class="text-center">Welcome <%= user %> </h1>
        <a type="button" class="btn btn-outline-success" href="/projects/new">Create A New Project</a>
    </div>
    <table class="table table-striped table-success table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Status</th>
                <th scope="col">Deadline</th>
                <th scope="col">No. of Bugs</th>
            </tr>
        </thead>
        <% projects.forEach((project) => { %>
        <tbody>
            <tr style="transform: rotate(0)">
                <th scope="row"><a href="/projects/<%= project.id %>" class="stretched-link"></a><%= project.id %> </th>
                <td><%= project.name %> </td>
                <td><span style="display:inline-block;
                    white-space: nowrap;
                    overflow: hidden;
                    text-overflow: ellipsis;
                    max-width: 13ch;"> <%= project.description %> </span>
                </td>
                <td><%= project.status %> </td>
                <td><%= project.deadline %> </td>
                <td><%= project.no_of_bugs %> </td>
            </tr>
            <% }) %>
</div>

<%- include("./partials/footer") %>