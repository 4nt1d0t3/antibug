<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <div class="mx-auto text-center form p-4">
            <h1 class="py-2">Edit <%= project.name %> </h1>
            <div>
                <form action="/projects/<%= project.id %>?_method=PUT " method="POST">
                    <div class="form-group">
                        <textarea rows="4" class="form-control" name="description"
                            maxlength="255"><%= project.description %></textarea>
                    </div>
                    <h4>Status</h4>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="status" id="planning" value="Planning"
                    <% if(project.status === "Planning"){ %><%= "checked" %><% } %> >
                        <label class="form-check-label" for="planning">Planning</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="status" id="analysis" value="Analysis"
                    <% if(project.status === "Analysis"){ %><%= "checked" %><% } %> >
                        <label class="form-check-label" for="analysis">Analysis</label>
                    </div>
                    <div class="form-check form-check-inline">
                        </h1>
                        <input class="form-check-input" type="radio" name="status" id="design" value="Design"
                    <% if(project.status === "Design"){ %><%= "checked" %><% } %> >
                        <label class="form-check-label" for="design">Design</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="status" id="development" value="Development"
                    <% if(project.status === "Development"){ %><%= "checked" %><% } %> >
                        <label class="form-check-label" for="development">Development</label>
                    </div>
                    <div class="form-check form-check-inline">
                        </h1>
                        <input class="form-check-input" type="radio" name="status" id="testing" value="Testing"
                    <% if(project.status === "Testing"){ %><%= "checked" %><% } %> >
                        <label class="form-check-label" for="testing">Testing</label>
                    </div>
                    <div class="form-check form-check-inline">
                        </h1>
                        <input class="form-check-input" type="radio" name="status" id="maintenance" value="Maintenance"
                    <% if(project.status === "Maintenance"){ %><%= "checked" %><% } %> >
                        <label class="form-check-label" for="maintenance">Maintenance</label>
                    </div>
                    <div class="form-group margin-class">
                        <h4>Deadline</h4>
                        <input class="form-control" type="date" name="deadline" id="deadline"
                            value="<%= project.deadline %>">
                    </div>
                    <div class="form-group">

                        <button class="btn-block btn btn-lg new-button">Submit!</button>
                    </div>
                </form>
                <a class="back-link" href="/projects/<%= project.id %>">Go back</a>
            </div>
        </div>
    </div>
    <%- include("../partials/footer") %>